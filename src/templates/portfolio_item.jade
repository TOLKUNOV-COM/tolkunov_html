                            #banner_language_ru_size_160_600.tab-pane(role="tabpanel")
                                .b-portfolio-item__view
                                    .b-portfolio-item__image
                                        img.img-responsive(src='http://placehold.it/160x600', alt='')
                    #banner_language_en.tab-pane(role="tabpanel")
                        ul.b-size-tabs.list-unstyled
                            li.b-size-tabs__item.active(role="presentation"): a.b-size-tabs__link(href='#banner_language_en_size_240_400', aria-controls="banner_language_en_size_240_400", role="tab", data-toggle="tab") 240#[span.b-size-tabs__divider x]400
