extends ./layouts/layout.jade

block content
    .b-page
        .container
            h1.b-page__title #[a.b-page__link(href="#") Флеш-баннер] для #[a.b-page__link(href="client.html") Exante]#[br]«Лучший брокер»

            .b-language-tabs
                ul.b-language-tabs__list(role="tablist")
                    li.b-language-tabs__item.active(role="presentation"): a.b-language-tabs__link(href='#banner_language_ru', aria-controls="banner_language_ru", role="tab", data-toggle="tab"): span.b-language-tabs__title Русский
                    li.b-language-tabs__item(role="presentation"): a.b-language-tabs__link(href='#banner_language_en', aria-controls="banner_language_en", role="tab", data-toggle="tab"): span.b-language-tabs__title Английский
                    li.b-language-tabs__item(role="presentation"): a.b-language-tabs__link(href='#banner_language_fr', aria-controls="banner_language_fr", role="tab", data-toggle="tab"): span.b-language-tabs__title Французский

            .b-portfolio-item
                .tab-content
                    #banner_language_ru.tab-pane.active(role="tabpanel")
                        ul.b-size-tabs.list-unstyled
                            li.b-size-tabs__item.active(role="presentation"): a.b-size-tabs__link(href='#banner_language_ru_size_240_400', aria-controls="banner_language_ru_size_240_400", role="tab", data-toggle="tab") 240#[span.b-size-tabs__divider x]400
                            li.b-size-tabs__item(role="presentation"): a.b-size-tabs__link(href='#banner_language_ru_size_100_100', aria-controls="banner_language_ru_size_100_100", role="tab", data-toggle="tab") 100#[span.b-size-tabs__divider x]100
                            li.b-size-tabs__item(role="presentation"): a.b-size-tabs__link(href='#banner_language_ru_size_200_300', aria-controls="banner_language_ru_size_200_300", role="tab", data-toggle="tab") 1200#[span.b-size-tabs__divider x]300
                            li.b-size-tabs__item(role="presentation"): a.b-size-tabs__link(href='#banner_language_ru_size_160_600', aria-controls="banner_language_ru_size_160_600", role="tab", data-toggle="tab") 160#[span.b-size-tabs__divider x]600
                        .tab-content
                            #banner_language_ru_size_240_400.tab-pane.active(role="tabpanel")
                                .b-portfolio-item__view
                                    .b-portfolio-item__scroll.scrollbar-light
                                        img.b-portfolio-item__image(src='http://placehold.it/770x90', alt='')
                            #banner_language_ru_size_100_100.tab-pane(role="tabpanel")
                                .b-portfolio-item__view
                                    .b-portfolio-item__scroll.scrollbar-light
                                        .b-iframe-scroll(style="width:728px;height:90px;")
                                            <iframe src="http://home.nanoteam.net/tolkunov/public/uploads/portfolio/cd7511c14132cc75594276b90af20f7c/728x90-adxxx-adalt-traffic.html" width="728" height="90" frameborder="0" scrolling="no"></iframe>
                                            .b-iframe-scroll__fix
                            #banner_language_ru_size_200_300.tab-pane(role="tabpanel")
                                .b-portfolio-item__view
                                    img.b-portfolio-item__image.img-responsive(src='http://placehold.it/1200x300', alt='')
                            #banner_language_ru_size_160_600.tab-pane(role="tabpanel")
                                .b-portfolio-item__view
                                    img.b-portfolio-item__image.img-responsive(src='http://placehold.it/160x600', alt='')
                    #banner_language_en.tab-pane(role="tabpanel")
                        ul.b-size-tabs.list-unstyled
                            li.b-size-tabs__item.active(role="presentation"): a.b-size-tabs__link(href='#banner_language_en_size_240_400', aria-controls="banner_language_en_size_240_400", role="tab", data-toggle="tab") 240#[span.b-size-tabs__divider x]400
                            li.b-size-tabs__item(role="presentation"): a.b-size-tabs__link(href='#banner_language_en_size_100_100', aria-controls="banner_language_en_size_100_100", role="tab", data-toggle="tab") 100#[span.b-size-tabs__divider x]100
                            li.b-size-tabs__item(role="presentation"): a.b-size-tabs__link(href='#banner_language_en_size_200_300', aria-controls="banner_language_en_size_200_300", role="tab", data-toggle="tab") 200#[span.b-size-tabs__divider x]300
                            li.b-size-tabs__item(role="presentation"): a.b-size-tabs__link(href='#banner_language_en_size_160_600', aria-controls="banner_language_en_size_160_600", role="tab", data-toggle="tab") 160#[span.b-size-tabs__divider x]600
                        .tab-content
                            #banner_language_en_size_240_400.tab-pane.active(role="tabpanel")
                                .b-portfolio-item__view
                                    img.b-portfolio-item__image.img-responsive(src='http://placehold.it/970x90', alt='')
                            #banner_language_en_size_100_100.tab-pane(role="tabpanel")
                                .b-portfolio-item__view
                                    img.b-portfolio-item__image.img-responsive(src='http://placehold.it/100x100', alt='')
                            #banner_language_en_size_200_300.tab-pane(role="tabpanel")
                                .b-portfolio-item__view
                                    img.b-portfolio-item__image.img-responsive(src='http://placehold.it/200x300', alt='')
                            #banner_language_en_size_160_600.tab-pane(role="tabpanel")
                                .b-portfolio-item__view
                                    img.b-portfolio-item__image.img-responsive(src='http://placehold.it/160x600', alt='')
                .b-portfolio-item__lead
                    .b-portfolio-item__info.b-portfolio-item__info_category Сфера бизнеса: #[a.b-portfolio-item__link(href='#') Интернет-магазины]
                    .b-portfolio-item__info.b-portfolio-item__info_style Стиль баннера: #[a.b-portfolio-item__link(href='#') Фото-реалистичный]
                    .b-portfolio-item__info.b-portfolio-item__info_date 2 марта 2016

                    .b-portfolio-item__info.b-portfolio-item__info_share
                        .b-portfolio-item__share
                            script(src="//yastatic.net/es5-shims/0.0.2/es5-shims.min.js")
                            script(src="//yastatic.net/share2/share.js")
                            .ya-share2(data-services="vkontakte,facebook,twitter")
                .b-portfolio-item__text.b-text
                    p Интерактивный флеш-баннер 240x400 для компании WikiPlanet, которая занимается организацией туров по всей России. Кстати, актуально при нынешнем курсе доллара.
                    p Особенности:
                    ol
                        li Интерактивность. В зависимости от выбора человека предлагаем ему конкретный тур, который соответствует его увлечениям. Например, если выбрана "Рыбалка", то предлагаем ознакомится с возможностью порыбачить на тихоокеанских лососей на базе "Еловка".
                        li При выборе отдыха необязательно кликать по кнопке "Рыбалка", достаточно подержать курсор над ней некоторое время, и баннер сам осуществит переход к следующей сцене. Это сделано для людей, которые опасаются кликать на интерактивные баннеры, т.к. научены горьким опытом обмана "лже-интерактивности".
                        li Глаза человечка на баннере следят за курсором - поводите его туда-сюда по баннеру.
                        li Баннер по итогу весит всего 46 кб, что позволяет его использоваться на большинстве рекламных площадок.
                .text-center
                    a.btn.btn-success.btn-lg.b-portfolio-item__button(href='#') Заказать похожий баннер

        .b-portfolio.g-mb80
            h5.b-portfolio__header Другие баннеры на тему «Финансы»:

            .b-portfolio__list
                a.b-portfolio__item.emerge(href='#portfolio_1', rel='portfolio', data-effect="zoom", data-origin="bottom", data-expose="true")
                    img.b-portfolio__image(src='assets/img/tmp/portfolio1.png')
                    .b-portfolio__content
                        p.b-portfolio__title Самоедлинноеназваниефирмы
                        p.b-portfolio__category Строительство
                    span.b-portfolio__type.b-portfolio__type_html5 HTML5
                    p.b-portfolio__date 10.02.2010
                a.b-portfolio__item.emerge(href='#portfolio_2', rel='portfolio', data-effect="zoom", data-origin="bottom", data-expose="true")
                    img.b-portfolio__image(src='assets/img/tmp/portfolio2.png')
                    .b-portfolio__content
                        p.b-portfolio__title Длинное название фирмы
                        p.b-portfolio__category Строительство
                    span.b-portfolio__type.b-portfolio__type_gif GIF
                    p.b-portfolio__date 10.02.2010
                a.b-portfolio__item.emerge(href='#portfolio_1', rel='portfolio', data-effect="zoom", data-origin="bottom", data-expose="true")
                    img.b-portfolio__image(src='assets/img/tmp/portfolio3.png')
                    .b-portfolio__content
                        p.b-portfolio__title QIVI
                        p.b-portfolio__category Динное название категории
                    span.b-portfolio__type.b-portfolio__type_jpg JPG
                    span.b-portfolio__like
                    p.b-portfolio__date 10.02.2010
                a.b-portfolio__item.emerge(href='#portfolio_2', rel='portfolio', data-effect="zoom", data-origin="bottom", data-expose="true")
                    img.b-portfolio__image(src='assets/img/tmp/portfolio2.png')
                    .b-portfolio__content
                        p.b-portfolio__title QIVI
                        p.b-portfolio__category Строительство
                    span.b-portfolio__type.b-portfolio__type_html5 HTML5
                    p.b-portfolio__date 10.02.2010
            script.
                $('.b-portfolio__item').each(function(){
                    $(this).data('hold', Math.floor(Math.random() * 400) + 50);
                });