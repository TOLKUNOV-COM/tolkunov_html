                            li.b-size-tabs__item(role="presentation"): a.b-size-tabs__link(href='#banner_language_ru_size_200_300', aria-controls="banner_language_ru_size_200_300", role="tab", data-toggle="tab") 1200#[span.b-size-tabs__divider x]300
                            li.b-size-tabs__item(role="presentation"): a.b-size-tabs__link(href='#banner_language_ru_size_160_600', aria-controls="banner_language_ru_size_160_600", role="tab", data-toggle="tab") 160#[span.b-size-tabs__divider x]600
                            li.b-size-tabs__item(role="presentation"): a.b-size-tabs__link(href='#banner_language_ru_size_300_300', aria-controls="banner_language_ru_size_300_300", role="tab", data-toggle="tab") 300#[span.b-size-tabs__divider x]300
                            li.b-size-tabs__item(role="presentation"): a.b-size-tabs__link(href='#banner_language_ru_size_300_400', aria-controls="banner_language_ru_size_300_400", role="tab", data-toggle="tab") 300#[span.b-size-tabs__divider x]400
                        .tab-content
                            #banner_language_ru_size_240_400.tab-pane.active(role="tabpanel")
