block content
    .b-page
        .container
            h1.b-page__title Контактная информация

            .b-contacts
                .row
                    .col-xs-4
                        .b-contacts__item.b-contacts__item_phone +7 (812) 603-70-97
                    .col-xs-4
                        .b-contacts__item.b-contacts__item_skype: a.b-contacts__link(href='skype:tolkunovdb?chat') tolkunovdb
                    .col-xs-4
